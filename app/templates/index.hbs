<h3>Questions:</h3>
<ul>
  {{#each model.questions as |question|}}
    {{#link-to 'question' question.id}}
      <li>
        {{best-answer question}}
        <strong>{{question.author}}</strong> asked: <i>{{question.query}}</i>
        <br><br>
      </li>
    {{/link-to}}
  {{/each}}
</ul>

{{add-question saveQuestion="saveQuestion" question=question}}
